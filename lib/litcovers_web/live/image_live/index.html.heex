<.navbar
  images_exist={has_images?(@current_user)}
  locale={@locale}
  request_path={~p"/#{@locale}/images"}
/>
<div class="bg-sec h-screen px-8 py-10">
  <div
    id="user-images"
    phx-update="replace"
    class="mt-7 grid sm:grid-cols-2 lg:grid-cols-3 2xl:grid-cols-4 gap-10 lg:gap-20"
  >
    <%= for image <- @images do %>
      <div>
        <.img
          id={"image-#{image.id}"}
          locale={@locale}
          image_id={image.id}
          img_url={image.url}
          aspect_ratio={aspect_ratio({image.width, image.height})}
        >
          <.heart_button favorite={image.favorite} image_id={image.id} />
          <.download_btn image_url={image.url} />
          <.delete_img_button image_id={image.id} />
        </.img>
      </div>
    <% end %>
  </div>
</div>
